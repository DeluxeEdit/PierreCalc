<?xml version="1.0" encoding="utf-8"?>
<root>
  <shell>
    <menu name="menu00">
      <!-- properties attribute is set -->
      <visibility properties="bar" />
      <actions>
        <property name="foo" value="true" />
      </actions>
    </menu>

    <menu name="menu01">
      <!-- maxfiles and maxfolders attributes are set -->
      <visibility maxfiles="5" maxfolders="6" />
      <actions>
        <property name="baz" value="true" />
      </actions>
    </menu>

    <menu name="menu02">
      <!-- fileextensions attribute is set -->
      <visibility fileextensions="com;exe;bat;cmd" />
      <actions>
        <property name="baz" value="true" />
      </actions>
    </menu>

    <menu name="menu03">
      <!-- exists attribute is set -->
      <visibility exists="C:\Users\Public;C:\Program Files (x86)" />
      <actions>
        <property name="baz" value="true" />
      </actions>
    </menu>

    <menu name="menu04">
      <!-- inverse attribute not specified -->
      <visibility />
      <actions>
        <property name="baz" value="true" />
      </actions>
    </menu>

    <menu name="menu05">
      <!-- inverse attribute set to maxfiles -->
      <visibility inverse="maxfiles" />
      <actions>
        <property name="baz" value="true" />
      </actions>
    </menu>

    <menu name="menu06">
      <!-- inverse multiple value -->
      <visibility inverse="maxfiles;maxfolders" />
      <actions>
        <property name="baz" value="true" />
      </actions>
    </menu>

    <menu name="menu07">
      <!-- inverse unknown attribute -->
      <visibility inverse="foo" />
      <actions>
        <property name="baz" value="true" />
      </actions>
    </menu>

    <menu name="menu08">
      <!-- class attribute is set -->
      <visibility class="file" />
      <actions>
        <property name="baz" value="true" />
      </actions>
    </menu>

    <menu name="menu09">
      <!-- pattern attribute is set -->
      <visibility pattern="*IMG_*" />
      <actions>
        <property name="baz" value="true" />
      </actions>
    </menu>

    <menu name="menu10">
      <!-- exprtk attribute is set -->
      <visibility exprtk="2>1" />
      <actions>
        <property name="baz" value="true" />
      </actions>
    </menu>

    <menu name="menu11">
      <!-- multiple visibility and validity elements -->
      <visibility fileextensions="txt" />
      <visibility fileextensions="doc" />
      <visibility fileextensions="ini" />
      <validity properties="bar" />
      <validity maxfiles="1" maxfolders="0" />
      <actions>
        <property name="baz" value="true" />
      </actions>
    </menu>

    <menu name="menu12">
      <!-- istrue attribute is set -->
      <visibility istrue="yes" />
      <actions>
        <property name="baz" value="true" />
      </actions>
    </menu>

    <menu name="menu13">
      <!-- isfalse attribute is set -->
      <visibility isfalse="no" />
      <actions>
        <property name="baz" value="true" />
      </actions>
    </menu>

    <menu name="menu14">
      <!-- isempty attribute is set -->
      <visibility isempty="hello" />
      <actions>
        <property name="baz" value="true" />
      </actions>
    </menu>

    <menu name="menu15">
      <!-- keyboard attribute is set -->
      <visibility keyboard="press-me" />
      <actions>
        <property name="baz" value="true" />
      </actions>
    </menu>

  </shell>
</root>
