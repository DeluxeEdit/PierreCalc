<?xml version="1.0" encoding="utf-8"?>
<root>
  <shell>
    <menu name="menu00">
      <actions>
        <!--basic property usage-->
        <property name="foo" value="bar" />
      </actions>
    </menu>
 
    <menu name="menu01">
      <actions>
        <!--basic exprtk usage-->
        <property name="foo" exprtk="1+5" />
      </actions>
    </menu>
 
    <menu name="menu02">
      <actions>
        <!--missing value-->
        <property name="foo" />
      </actions>
    </menu>

    <menu name="menu03">
      <actions>
        <!--basic file usage-->
        <property name="foo" file="c:\foo\bar.txt" />
      </actions>
    </menu>

    <menu name="menu04">
      <actions>
        <!--basic filesize usage-->
        <property name="foo" file="c:\foo\bar.txt" filesize="13" />
      </actions>
    </menu>
    
    <menu name="menu05">
      <actions>
        <!--basic registrykey usage-->
        <property name="foo" registrykey="HKEY_LOCAL_MACHINE\SOFTWARE\7-Zip\Path" />
      </actions>
    </menu>
    
    <menu name="menu06">
      <actions>
        <!--basic searchpath usage-->
        <property name="foo" searchpath="foobar.exe" />
      </actions>
    </menu>
    
    <menu name="menu07">
      <actions>
        <!--basic searchpath usage-->
        <property name="foo" searchpath="foobar.exe" fail="bing" />
      </actions>
    </menu>

  </shell>
</root>
