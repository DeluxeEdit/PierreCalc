<?xml version="1.0" encoding="utf-8"?>
<root>
  <shell>
    <menu name="menu00">
      <actions>
        <!--basic prompt usage-->
        <prompt name="foo" title="Please enter a value for 'foo'." />
      </actions>
    </menu>
 
    <menu name="menu01">
      <actions>
        <prompt name="theanswer" title="What is the answer to life, universe and everything?" default="42" />
      </actions>
    </menu>
 
    <menu name="menu02">
      <actions>
        <!--test utf-8 character-->
        <prompt name="foo" title="Español, Québec, Mjölnir." />
      </actions>
    </menu>

    <menu name="menu03">
      <actions>
        <!--test yesno question-->
        <prompt type="yesno" name="verbosemode" title="Enable verbose output mode?" valueyes="/verbose" valueno="/normal" />
      </actions>
    </menu>

    <menu name="menu04">
      <actions>
        <!--test ok message-->
        <prompt type="ok" name="myproperty" title="Wait for the system to load and press OK button." />
      </actions>
    </menu>

  </shell>
</root>
